{
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": true,
    "panel": "dedicated",
    "showReuseMessage": false,
    "clear": true
  },
  "inputs": [
    {
      "id": "environmentPicker",
      "type": "pickString",
      "description": "Select the environment to build and upload",
      "default": "main",
      "options": ["main", "test"]
    }
  ],
  "tasks": [
    {
      "label": "PlatformIO: Upload and run test",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "platformio",
        "run",
        "--environment",
        "${input:environmentPicker}",
        "--target",
        "upload",
        "--target",
        "monitor"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$platformio"],
      "isBackground": false
    }
  ]
}
